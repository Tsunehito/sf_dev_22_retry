{% extends 'base.html.twig' %}
{% import "extra/macro/btn.html.twig" as btn %}

{% block title %}Category index{% endblock %}

{% block body %}
    <h1>Category index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>
                    {{ btn.simple(path('category_show', {'id': category.id}), "info", "Show", "ROLE_READ_CATEGORY", category) }}
                    {{ btn.simple(path('category_edit', {'id': category.id}), "success", "Edit", "ROLE_UPDATE_CATEGORY", category) }}
                    {{ btn.simple(path('category_confirm_delete', {'id': category.id}), "danger", "Delete", "ROLE_DELETE_CATEGORY", category) }}

                    <a href="{{ path('category_show', {'id': category.id}) }}">show</a>
                    <a href="{{ path('category_edit', {'id': category.id}) }}">edit</a>
                    <a href="{{ path('category_comfirm_delete', {'id': category.id}) }}">delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {{ btn.simple(path('article_new'), "primary", "Add", "ROLE_LIST_ARTICLE") }}

{% endblock %}
